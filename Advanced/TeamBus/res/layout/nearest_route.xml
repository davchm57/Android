<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige" >
    
        <!--
Programmer: TeamBus
Final Project
CIS 4700: Mobile Commerce Development
Spring 2014
Due date: 04/21/14
Date completed: 04/21/14
*************************************
* If users touch a button on the bottom of the screen,
  the map shows all bus stops for a clicked route number.
*************************************
-->
    <!-- Google Map. -->
    <fragment 
          android:id="@+id/map"
          android:layout_width="match_parent"
          android:layout_height="400dp"
          android:name="com.google.android.gms.maps.MapFragment"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/map" >

        <!-- Button for route 3. -->
    <Button
        android:id="@+id/btnRoute3"
        style="@style/btnStyleBeige"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:text="Route 3" />

    <!-- Button for route 11a. -->
      <Button
          android:id="@+id/btnRoute11a"
          style="@style/btnStyleBeige"
          android:layout_width="70dp"
          android:layout_height="match_parent"
          android:text="Route 11a" />

      <!-- Button for route 11b. -->
      <Button
          android:id="@+id/btnRoute11b"
          style="@style/btnStyleBeige"
          android:layout_width="70dp"
          android:layout_height="match_parent"
          android:text="Route 11b" />

      <!-- Button for route 16a. -->
      <Button
          android:id="@+id/btnRoute16a"
          style="@style/btnStyleBeige"
          android:layout_width="70dp"
          android:layout_height="match_parent"
          android:text="Route 16a" />

      <!-- Button for route 16b. -->
      <Button
          android:id="@+id/btnRoute16b"
          style="@style/btnStyleBeige"
          android:layout_width="70dp"
          android:layout_height="match_parent"
          android:text="Route 16b" />
    
    </LinearLayout>

</RelativeLayout>
