<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Secretary"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/secretaryradiog"
        android:src="@drawable/secretary1" />

    <RadioGroup
        android:id="@+id/secretaryradiog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView2" >

        <RadioButton
            android:id="@+id/secretaryradiog1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="116dp"
            android:text="@string/secretary1" />

        <RadioButton
            android:id="@+id/secretaryradiog2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="29dp"
            android:text="@string/secretary2" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/secretaryradiog"
        android:layout_toLeftOf="@+id/secretaryradiog"
        android:src="@drawable/secretary2" />

    <Button
        android:id="@+id/btnsecretarynext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnsecretaryback"
        android:layout_alignBottom="@+id/btnsecretaryback"
        android:layout_toRightOf="@+id/textView1"
        style="@style/btnStyleBeige"
        android:text="Next" />

    <Button
        android:id="@+id/btnsecretaryback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secretaryradiog"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        style="@style/btnStyleBeige"
        android:text="Back" />

</RelativeLayout>